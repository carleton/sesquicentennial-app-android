<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginBottom="5dp"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="0dp"
    card_view:contentPaddingRight="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/dateCardBackground"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_event_title"
        android:textColor="@color/cardText"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_event_location"
        android:textColor="@color/cardText"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textStyle="normal"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_event_date"
        android:textColor="@color/cardText"
        android:gravity="center"
        android:textStyle="normal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_event_description"
        android:textColor="@color/cardText"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textSize="@dimen/abc_text_size_small_material"
        android:visibility="gone"
        android:layout_marginBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/lin_layout_url"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_url"
            android:text="@string/click_here_for_more_information"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:elevation="5dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDarkSlightlyTransparent"
            android:textColor="@color/cardText"
            android:layout_height="wrap_content" />

        </LinearLayout>


        <ImageView
            android:id="@+id/img_icon_expand"
            android:padding="10dp"
            android:src="@drawable/ic_navigation_expand_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v7.widget.CardView>