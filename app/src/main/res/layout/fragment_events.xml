<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="edu.carleton.app.reunion.MainFragments.EventsFragment">

        <!-- Vertical Layout for date tabs + event item list -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="13"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp">



            <!-- Scrollable date tabs -->


                <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                    android:layout_marginTop="5dp"
                    android:id="@+id/lst_event_dates"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:scrollbars="horizontal"
                    app:rvp_triggerOffset="0.1"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </RelativeLayout>

            <!-- Event list items -->
            <android.support.v7.widget.RecyclerView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="87"
                android:id="@+id/lst_events">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <!-- Ignore: Getting events holder... -->
        <LinearLayout
            android:id="@+id/layout_unable_to_retrieve_events"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_request_events"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Getting events..."
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_try_getting_events"
                android:text="Try Again"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <ImageButton
        android:id="@+id/btn_refresh"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="5dp"
        android:background="@drawable/bg_refresh_button"
        android:layout_alignParentLeft="true"
        android:src="@drawable/refresh_white"
        android:layout_height="wrap_content" />
</FrameLayout>
